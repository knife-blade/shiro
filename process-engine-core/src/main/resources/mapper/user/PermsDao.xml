<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touchealth.platform.processengine.dao.user.PermsDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.touchealth.platform.processengine.entity.user.Perms">
        <result column="id" property="id"/>
        <result column="created_time" property="createdTime"/>
        <result column="created_by" property="createdBy"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="deleted_flag" property="deletedFlag"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="perms_code" property="permsCode"/>
        <result column="perms_group" property="permsGroup"/>
        <result column="p_id" property="pId"/>
        <result column="sort" property="sort"/>
        <result column="priority" property="priority"/>
    </resultMap>

    <resultMap id="permDetailMap" type="com.touchealth.platform.processengine.pojo.dto.user.PermDetailDto">
        <result column="p_id" property="id"/>
        <result column="p_code" property="code"/>
        <result column="p_name" property="name"/>
        <result column="p_group" property="group"/>
        <collection property="childs" javaType="java.util.List"
                    ofType="com.touchealth.platform.processengine.pojo.dto.user.PermDetailDto">
            <result column="p_id" property="id"/>
            <result column="p1_id" property="id"/>
            <result column="p1_code" property="code"/>
            <result column="p1_name" property="name"/>
            <result column="p1_group" property="group"/>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_time,
        created_by,
        updated_time,
        updated_by,
        deleted_flag,
        code, `name`, `type`, perms_code, `perms_group`, p_id, sort, priority
    </sql>

    <!-- 查询用户权限菜单 -->
    <select id="listPerms" resultMap="permDetailMap">
        select
        p.p_id p_pid,
        p.id p_id,
        p.code p_code,
        p.name p_name,
        p.perms_group p_group,
        p1.id p1_id,
        p1.code p1_code,
        p1.name p1_name,
        p1.perms_group p1_group
        from perms p
        left join perms p1
        on p1.p_id = p.id
        and p1.deleted_flag = 0
        where p.deleted_flag = 0
        and p.type = #{type}
        group by p.p_id
    </select>

    <!-- 查询用户权限菜单下的权限明细 -->
    <select id="listUserPermDetailByMenu"
            resultType="com.touchealth.platform.processengine.pojo.dto.user.PermDto">
        select
        p.id,
        p.name,
        p.code,
        p.perms_group `group`,
        p.perms_code permsCode,
        p.type,
        up.id is not null have
        from perms p
        left join user_perms up
        on up.perms_id = p.id and up.deleted_flag = 0 and up.user_id = #{userId} and up.channel_no = #{channelNo}
        where p.deleted_flag = 0
        and p.p_id = #{menuId}
    </select>

    <!-- 查询岗位权限菜单下的权限明细 -->
    <select id="listPostJobPermDetailByMenu"
            resultType="com.touchealth.platform.processengine.pojo.dto.user.PermDto">
        select
        p.id,
        p.name,
        p.code,
        p.perms_group `group`,
        p.perms_code permsCode,
        p.type,
        pjp.id is not null have
        from perms p
        left join post_job_perms pjp
        on pjp.perms_id = p.id and pjp.deleted_flag = 0 and pjp.channel_no = #{channelNo} and pjp.post_job_id = #{postJobId}
        where p.deleted_flag = 0
        and p.p_id = #{menuId}
    </select>

    <!-- 查询用户的所有权限 -->
    <select id="listUserAllPerms" resultType="com.touchealth.platform.processengine.pojo.dto.user.PermDto">
        select
        p.id,
        p.name,
        p.code,
        p.perms_code permsCode,
        p.perms_group `group`,
        p.type
        from perms p
        join user_perms up
        on up.perms_id = p.id
        and up.user_id = #{userId}
        where up.channel_no = #{channelNo}
        and p.deleted_flag = 0
        and up.deleted_flag = 0
    </select>

    <!-- 查询渠道下的全部权限，包括删除的 -->
    <select id="getAll" resultType="com.touchealth.platform.processengine.entity.user.Perms">
        select * from perms
    </select>

</mapper>
