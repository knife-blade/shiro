<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touchealth.platform.processengine.dao.user.PostJobPermsDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.touchealth.platform.processengine.entity.user.PostJobPerms">
        <result column="id" property="id" />
        <result column="created_time" property="createdTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_by" property="updatedBy" />
        <result column="deleted_flag" property="deletedFlag" />
        <result column="channel_no" property="channelNo" />
        <result column="post_job_id" property="postJobId" />
        <result column="perms_id" property="permsId" />
        <result column="perms_type" property="permsType" />
    </resultMap>

    <resultMap id="postJobPermResultMap" type="com.touchealth.platform.processengine.pojo.dto.user.PermTemplatePostJobDto">
        <result column="pj_id" property="postJobId"/>
        <result column="pj_name" property="postJobName"/>
        <result column="pj_deptid" property="deptId"/>
        <collection property="permList" javaType="java.util.List"
                    ofType="com.touchealth.platform.processengine.pojo.dto.user.PermDto">
            <result column="p_id" property="id"></result>
            <result column="p_type" property="type"></result>
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_time,
        created_by,
        updated_time,
        updated_by,
        deleted_flag,
        channel_no, post_job_id, perms_id, perms_type
    </sql>

    <!-- 根据关键字查询岗位权限列表 -->
    <select id="getAllBySearch" resultMap="postJobPermResultMap">
        select
        pj.id pj_id,
        pj.name pj_name,
        pj.dept_id pj_deptid,
        p.id p_id,
        p.type p_type
        from post_job pj
        inner join post_job_perms pjp
        on pj.id = pjp.post_job_id and pjp.deleted_flag = 0
        left join perms p
        on p.id = pjp.perms_id and p.deleted_flag = 0
        where
        pj.deleted_flag = 0
        and pj.deleted_flag = 0
        and pjp.channel_no = #{channelNo}
        <if test="search != null and search != ''">
            and pj.name like concat('%', #{search}, '%')
        </if>
        order by pjp.created_time desc
    </select>

</mapper>
