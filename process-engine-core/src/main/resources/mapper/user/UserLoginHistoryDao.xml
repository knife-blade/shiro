<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touchealth.platform.processengine.dao.user.UserLoginHistoryDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.touchealth.platform.processengine.entity.user.UserLoginHistory">
        <result column="id" property="id" />
        <result column="user_type" property="userType" />
        <result column="user_id" property="userId" />
        <result column="login_time" property="loginTime" />
        <result column="current_user_remark" property="currentUserRemark" />
        <result column="login_area" property="loginArea" />
        <result column="ip_address" property="ipAddress" />
        <result column="referer" property="referer" />
        <result column="login_status" property="loginStatus" />
        <result column="logout_time" property="logoutTime" />
        <result column="is_disable" property="isDisable" />
        <result column="is_deleted" property="isDeleted" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        user_type, user_id, login_time, current_user_remark, login_area, ip_address, referer, login_status, logout_time, is_disable, is_deleted, version
    </sql>

    <update id="updateExpirationTimeById">
        update user_login_history set user_login_history.expiration_time = #{expirationTime} where id = #{id}
    </update>

</mapper>
