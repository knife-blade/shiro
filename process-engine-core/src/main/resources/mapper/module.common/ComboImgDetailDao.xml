<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touchealth.platform.processengine.dao.module.common.ComboImgDetailDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.touchealth.platform.processengine.entity.module.common.ComboImgDetail">
        <result column="id" property="id" />
        <result column="created_time" property="createdTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_by" property="updatedBy" />
        <result column="deleted_flag" property="deletedFlag" />
        <result column="module_unique_id" property="moduleUniqueId" />
        <result column="name" property="name" />
        <result column="url" property="url" />
        <result column="channel_no" property="channelNo" />
        <result column="page_id" property="pageId" />
        <result column="m_parent_id" property="mParentId" />
        <result column="combo_img_id" property="comboImgId" />
        <result column="link_module_id" property="linkModuleId" />
        <result column="status" property="status" />
        <result column="sort" property="sort" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_time,
        created_by,
        updated_time,
        updated_by,
        deleted_flag,
        module_unique_id, name, url, channel_no, page_id, m_parent_id, combo_img_id, link_module_id, status, sort, version
    </sql>

    <select id="queryList" parameterType="com.touchealth.platform.processengine.pojo.request.module.common.ComboImgDetailRequest"
            resultType="com.touchealth.platform.processengine.pojo.dto.module.common.ComboImgDetailDto">
        select
        p.page_name,
        detail.name,
        detail.url,
        v.version_name as version,
        v.id as versionId,
        detail.updated_time,
        detail.id,
        detail.combo_img_id,
        c.page_id,
        detail.link_module_id,
        detail.status
        from module_combo_img c
        inner join page_manager p on c.page_id = p.id
        inner join module_combo_img_detail detail on c.id = detail.combo_img_id
        inner join platform_version v on detail.version = v.id
        where c.channel_no = #{channelNo}
        <if test="null != pageName and pageName != ''">
            and p.page_name like concat('%',#{pageName},'%')
        </if>
        <if test="null != pageId">
            and detail.page_id = #{pageId}
        </if>
        <if test="null != name and name != ''">
            and detail.name like concat('%',#{name},'%')
        </if>
        <if test="null != version and version != ''">
            and v.id = #{version}
        </if>
        <!-- 未回收 -->
        <if test="null != recycleStatus and recycleStatus == 0">
            and detail.status != 2
        </if>
        <!-- 已回收 -->
        <if test="null != recycleStatus and recycleStatus == 1">
            and detail.status = 2
        </if>
        and c.deleted_flag = 0
        and detail.deleted_flag = 0
        <choose>
            <when test="null != recycleStatus and recycleStatus == 0">
                order by detail.created_time desc
            </when>
            <otherwise>
                order by detail.updated_time desc
            </otherwise>
        </choose>
    </select>
</mapper>
