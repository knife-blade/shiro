<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touchealth.platform.processengine.dao.module.common.HotspotPartsDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.touchealth.platform.processengine.entity.module.common.HotspotParts">
        <result column="id" property="id" />
        <result column="created_time" property="createdTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_by" property="updatedBy" />
        <result column="deleted_flag" property="deletedFlag" />
        <result column="module_unique_id" property="moduleUniqueId" />
        <result column="name" property="name" />
        <result column="channel_no" property="channelNo" />
        <result column="page_id" property="pageId" />
        <result column="hotspot_id" property="hotspotId" />
        <result column="link_module_id" property="linkModuleId" />
        <result column="status" property="status" />
        <result column="web_json" property="webJson" />
        <result column="sort" property="sort" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_time,
        created_by,
        updated_time,
        updated_by,
        deleted_flag,
        module_unique_id, name, channel_no, page_id, hotspot_id, link_module_id, status, web_json, sort, version
    </sql>

    <select id="getList" parameterType="com.touchealth.platform.processengine.pojo.request.module.common.HotspotRequest"
        resultType="com.touchealth.platform.processengine.pojo.dto.module.common.HotspotPartsDto">
        select
        p.page_name,
        s.name,
        h.url,
        v.version_name as version,
        v.id as versionId,
        s.updated_time,
        s.id,
        s.hotspot_id,
        s.link_module_id,
        h.page_id,
        s.status
        from module_hotspot h
        inner join page_manager p on h.page_id = p.id
        inner join module_hotspot_parts s on h.id = s.hotspot_id
        inner join platform_version v on s.version = v.id
        where h.channel_no = #{channelNo}
        <if test="null != pageName and pageName != ''">
            and p.page_name like concat('%',#{pageName},'%')
        </if>
        <if test="null != pageId">
            and s.page_id = #{pageId}
        </if>
        <if test="null != name and name != ''">
            and s.name like concat('%',#{name},'%')
        </if>
        <if test="null != version and version != ''">
            and v.id = #{version}
        </if>
        <!-- 未回收 -->
        <if test="null != recycleStatus and recycleStatus == 0">
            and s.status != 2
        </if>
        <!-- 已回收 -->
        <if test="null != recycleStatus and recycleStatus == 1">
            and s.status = 2
        </if>
        and h.deleted_flag = 0
        and s.deleted_flag = 0
        <choose>
            <when test="null != recycleStatus and recycleStatus == 0">
                order by s.created_time desc
            </when>
            <otherwise>
                order by s.updated_time desc
            </otherwise>
        </choose>
    </select>
</mapper>
