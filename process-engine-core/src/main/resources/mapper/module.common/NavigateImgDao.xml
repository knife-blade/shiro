<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.touchealth.platform.processengine.dao.module.common.NavigateImgDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.touchealth.platform.processengine.entity.module.common.NavigateImg">
        <result column="id" property="id" />
        <result column="created_time" property="createdTime" />
        <result column="created_by" property="createdBy" />
        <result column="updated_time" property="updatedTime" />
        <result column="updated_by" property="updatedBy" />
        <result column="deleted_flag" property="deletedFlag" />
        <result column="module_unique_id" property="moduleUniqueId" />
        <result column="name" property="name" />
        <result column="url" property="url" />
        <result column="channel_no" property="channelNo" />
        <result column="page_id" property="pageId" />
        <result column="navigate_id" property="navigateId" />
        <result column="link_module_id" property="linkModuleId" />
        <result column="status" property="status" />
        <result column="sort" property="sort" />
        <result column="version" property="version" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        created_time,
        created_by,
        updated_time,
        updated_by,
        deleted_flag,
        module_unique_id, name, url, channel_no, page_id, navigate_id, link_module_id, status, sort, version
    </sql>

    <select id="queryList" parameterType="com.touchealth.platform.processengine.pojo.request.module.common.NavigateRequest"
            resultType="com.touchealth.platform.processengine.pojo.dto.module.common.NavigateImgDto">
        select
        p.page_name,
        img.name,
        img.url,
        v.version_name as version,
        v.id as versionId,
        img.updated_time,
        img.id,
        img.navigate_id,
        img.link_module_id,
        img.page_id,
        img.status
        from module_navigate n
        inner join page_manager p on n.page_id = p.id
        inner join module_navigate_img img on n.id = img.navigate_id
        inner join platform_version v on img.version = v.id
        where n.channel_no = #{channelNo}
        <if test="null != pageName and pageName != ''">
            and p.page_name like concat('%',#{pageName},'%')
        </if>
        <if test="null != pageId">
            and img.page_id = #{pageId}
        </if>
        <if test="null != name and name != ''">
            and img.name like concat('%',#{name},'%')
        </if>
        <if test="null != version and version != ''">
            and v.id = #{version}
        </if>
        <!-- 未回收 -->
        <if test="null != recycleStatus and recycleStatus == 0">
            and img.status != 2
        </if>
        <!-- 已回收 -->
        <if test="null != recycleStatus and recycleStatus == 1">
            and img.status = 2
        </if>
        and n.deleted_flag = 0
        and img.deleted_flag = 0
        <choose>
            <when test="null != recycleStatus and recycleStatus == 0">
                order by img.created_time desc
            </when>
            <otherwise>
                order by img.updated_time desc
            </otherwise>
        </choose>
    </select>
</mapper>
